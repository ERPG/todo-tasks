extends layout

block style-head
  link(rel='stylesheet', href='/bower_components/font-awesome/css/font-awesome.min.css')
  link(rel='stylesheet', href='/css/login.css')

block content
  .omb_login
    h3.omb_authTitle
      a(href='/') Login 
      | or Sign up
    .row.omb_row-sm-offset-3.omb_socialButtons
      .col-xs-4.col-sm-2
        a.btn.btn-lg.btn-block.omb_btn-facebook(href='#')
          i.fa.fa-facebook.visible-xs
          |  
          span.hidden-xs Facebook
      .col-xs-4.col-sm-2
        a.btn.btn-lg.btn-block.omb_btn-twitter(href='#')
          i.fa.fa-twitter.visible-xs
          |  
          span.hidden-xs Twitter
      .col-xs-4.col-sm-2
        a.btn.btn-lg.btn-block.omb_btn-google(href='#')
          i.fa.fa-google-plus.visible-xs
          |  
          span.hidden-xs Google+
    .row.omb_row-sm-offset-3.omb_loginOr
      .col-xs-12.col-sm-6
        hr.omb_hrOr
        |  
        span.omb_spanOr or
    .row.omb_row-sm-offset-3
      .col-xs-12.col-sm-6
        form.omb_loginForm(action='/register', autocomplete='off', method='POST')
          .input-group
            span.input-group-addon
              i.fa.fa-user
            |  
            input.form-control(type='text', name='username', placeholder='Username', required, autofocus)
          span.help-block
          .input-group
            span.input-group-addon
              i.fa.fa-envelope
            |  
            input.form-control(type='email', name='email', placeholder='Email address', required)
          span.help-block
          .input-group
            span.input-group-addon
              i.fa.fa-lock
            |  
            input.form-control(type='password', name='password', placeholder='Password', required)
          |  
          span.help-block
          |  
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Register