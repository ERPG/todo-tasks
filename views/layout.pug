doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Tasks Manager
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    block style-head
      
  body
    header
      nav.navbar.navbar-default(role='navigation')
        .container-fluid
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            |  
            a.navbar-brand(href='/') Tasks Manager
          .collapse.navbar-collapse.navbar-ex1-collapse
            if user
              ul.nav.navbar-nav
                li(class="" + (section === 'tasks' ? 'active' : ''))
                  a(href='/tasks') Tasks
                li(class="" + (section === 'done' ? 'active' : ''))
                  a(href='/tasks/done') Completed
              ul.nav.navbar-nav.navbar-right
                li.dropdown
                  a#username-nav.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                    | #{user.username}
                    span.caret
                  ul.dropdown-menu
                    li
                      a(href='/logout') Logout

    .container
      block content

    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(src='/js/main.js')